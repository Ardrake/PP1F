<Window x:Class="SGA.MenuClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGA"
        mc:Ignorable="d"
        Title="Bienvenue au Guichet Automatique CDI" Height="350" Width="500">
    <Grid>
        <Label x:Name="label" Content="Veuillez choisir une opération." HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="retrait" Content="Retrait en espèces" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Width="147" Click="retrait_button_Click"/>
        <Button x:Name="depot" Content="Dépot" HorizontalAlignment="Center" Margin="0,137,0,0" VerticalAlignment="Top" Width="147" Click="depot_button_Click"/>
        <Button x:Name="paiementEtVirement" Content="Paiement et virements" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Width="147" Click="button_paiementEtVirement"/>
        <Button x:Name="quitter" Content="Quitter" HorizontalAlignment="Center" Margin="0,191,0,0" VerticalAlignment="Top" Width="147" Click="button_Quitter"/>

    </Grid>
</Window>
